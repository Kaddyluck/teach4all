= render layout: 'dashboard/layout' do
  %h4= link_to "Current courses", dashboard_courses_current_path
  - if @current_courses.any?
    .card-columns
      = render partial: 'dashboard/course',
                collection: @current_courses,
                as: :course,
                locals: { type: :current }
  - else
    .row.justify-content-center
      %h5 No current courses
  %hr
  %h4= link_to "Courses from organizations", dashboard_courses_from_organizations_path
  - if @courses_from_organizations.any?
    .card-columns
      = render partial: 'dashboard/course',
                collection: @courses_from_organizations,
                as: :course,
                locals: { type: :from_organization }
  - else
    .row.justify-content-center
      %h5 No courses from organizations
  %hr
  %h4= link_to "Courses from users", dashboard_courses_from_users_path
